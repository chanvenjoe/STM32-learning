void Win4_Test(void)
{
	while(1)
	{
		static char state = 0;
		state  = ~state;
		if(state)
			__HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_2, 0);
		else
			__HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_2, 10);
//		osDelay(3000);
		vTaskDelay(3000);
//		vTaskSuspend(g_TCBofWinTask);
//		vTaskResume(); Recover to the state before suspend
	}
}

