#define WS_LED_PORT GPIOA

#define delay_60ns __NOP();__NOP();__NOP();__NOP();__NOP();__NOP();__NOP();__NOP();__NOP();__NOP();
#define delay_600ns delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;
#define delay_6us	delay_600ns;delay_600ns;delay_600ns;delay_600ns;delay_600ns;delay_600ns;delay_600ns;delay_600ns;delay_600ns;delay_600ns;
#define delay_60us delay_6us;delay_6us;delay_6us;delay_6us;delay_6us;delay_6us;delay_6us;delay_6us;delay_6us;delay_6us;delay_6us;

#define T0H 	HAL_GPIO_WritePin(WS_LED_PORT,WS_LED_Pin , GPIO_PIN_SET);		delay_60ns;delay_60ns;//220-380ns
#define T0L 	HAL_GPIO_WritePin(WS_LED_PORT,WS_LED_Pin , GPIO_PIN_RESET);		delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;//580-1us
#define T1H 	HAL_GPIO_WritePin(WS_LED_PORT,WS_LED_Pin , GPIO_PIN_SET);		delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;delay_60ns;//580-1
#define T1L 	HAL_GPIO_WritePin(WS_LED_PORT,WS_LED_Pin , GPIO_PIN_RESET);		delay_60ns;delay_60ns;//220-420
#define RES 	HAL_GPIO_WritePin(WS_LED_PORT,WS_LED_Pin , GPIO_PIN_RESET);		delay_60us;HAL_GPIO_WritePin(WS_LED_PORT,WS_LED_Pin , GPIO_PIN_SET);
